<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgv_personal"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/icon_person"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        >
    </ImageView>
    <TextView
        android:id="@+id/textview_labelName_Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/imgv_personal"
        android:text="Name"
        android:fontFamily="@font/sf_pro_text_bold"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toTopOf="@id/imgv_personal"
        >
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_Name_Profile"
        android:text="Group 03"
        android:fontFamily="@font/sf_pro_text_regular"
        android:textColor="@color/silver"
        app:layout_constraintTop_toBottomOf="@id/textview_labelName_Profile"
        app:layout_constraintLeft_toLeftOf="@id/textview_labelName_Profile"
        app:layout_constraintBottom_toBottomOf="@id/imgv_personal"
        android:textSize="14sp"
        >
    </TextView>
    <ImageView
        android:id="@+id/imgv_rightForward"
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:src="@drawable/icon_right_forward"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgv_personal"
        app:layout_constraintBottom_toBottomOf="@id/imgv_personal"
        android:layout_marginRight="10dp"
        >
    </ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>