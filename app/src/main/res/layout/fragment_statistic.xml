<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.Statistic.StatisticFragment"
    android:background="@drawable/main_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp"
        android:background="#EFF7FE"
        android:weightSum="100">
        <ImageButton
            android:id="@+id/imagebutton_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_left_forward"
            android:visibility="invisible"
            android:onClick="onBackButtonClick"/>
        <TextView
            android:id="@+id/textview_Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="95"
            android:text="@string/STATISTIC"
            android:gravity="start"
            android:fontFamily="@font/sf_pro_text_medium"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            />
        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:layout_marginRight="15dp"
            android:background="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:weightSum="100"
            android:orientation="vertical"
            android:background="@drawable/rounded_background">
            <Button
                android:id="@+id/btn_datetime_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                app:layout_constraintWidth_percent="0.8"
                android:gravity="center"
                android:text="September_2023"
                android:fontFamily="@font/sf_pro_text_medium"
                android:textColor="@color/black_blue"
                style="?android:spinnerStyle"
                android:onClick="openDatePicker"
                android:background="@drawable/no_arrow"
                android:layout_marginTop="10dp"
                />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                >
                <!--                    Dòng 1-->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/blue"
                        android:textSize="15sp"
                        android:fontFamily="@font/sf_pro_text_medium"
                        android:text="@string/Income" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/blue"
                        android:textSize="15sp"
                        android:text="@string/Expense"
                        android:fontFamily="@font/sf_pro_text_medium"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/blue"
                        android:textSize="15sp"
                        android:text="@string/Total"
                        android:fontFamily="@font/sf_pro_text_medium"
                        />

                </TableRow>
                <!-- Dòng 2 -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textview_income"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/teal_700"
                        android:textSize="20sp"
                        android:text="+300,000"
                        android:fontFamily="@font/sf_pro_text_medium"
                        />

                    <TextView
                        android:id="@+id/textview_expense"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/orange"
                        android:textSize="20sp"
                        android:text="-500,000"
                        android:fontFamily="@font/sf_pro_text_medium"
                        />

                    <TextView
                        android:id="@+id/textview_total"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/red"
                        android:textSize="20sp"
                        android:text="-200,000"
                        android:fontFamily="@font/sf_pro_text_medium"
                        />

                </TableRow>
            </TableLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="55"
            android:weightSum="100"
            android:orientation="vertical">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:layout_marginHorizontal="10dp">
                <Button
                    android:id="@+id/btn_cal_week"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/ButtonStyle"
                    android:text="@string/This_Week"
                    android:layout_margin="15dp"
                    />
                <Button
                    android:id="@+id/btn_cal_month"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/ButtonStyle"
                    android:text="@string/This_Month"
                    android:layout_margin="15dp"
                    />
                <Button
                    android:id="@+id/btn_cal_year"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/ButtonStyle"
                    android:text="@string/This_Year"
                    android:layout_margin="15dp"
                    />
            </TableRow>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="80">
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="12dp"
                    android:background="@drawable/rounded_background2"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_text_medium"
                android:text="@string/Transaction"
                android:textSize="20sp"
                android:layout_marginHorizontal="25dp"
                android:layout_marginVertical="10dp"/>
            <ListView
                android:id="@+id/lv_History"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginBottom="10dp"
                tools:listitem="@layout/lv_item_history"
                android:background="@drawable/rounded_background2"
                />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</FrameLayout>