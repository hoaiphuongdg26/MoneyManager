<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true">

    <!-- gv_item_color.xml -->
    <FrameLayout
        android:id="@+id/framelayout_color"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/colorbutton_default"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:layout_marginLeft="15dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="5"
            android:orientation="vertical"
            >
            <ImageButton
                android:id="@+id/imagebutton_icon"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="@drawable/bg_transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_question"
                android:paddingTop="1dp"
                />
            <TextView
                android:id="@+id/textview_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="2"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/sf_pro_text_medium"
                android:text="####"
                android:textColor="@color/white" />
        </LinearLayout>
    </FrameLayout>
    <TextView
        android:id="@+id/textview_eachCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Food"
        android:fontFamily="@font/sf_pro_text_regular"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@+id/framelayout_color"
        app:layout_constraintStart_toEndOf="@+id/framelayout_color"
        >
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_noteForEachCategory"
        android:text="@string/Breakfast"
        android:fontFamily="@font/sf_pro_text_regular"
        android:textColor="@color/silver"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/textview_eachCategory"
        app:layout_constraintLeft_toLeftOf="@id/textview_eachCategory"
        app:layout_constraintBottom_toBottomOf="@id/framelayout_color"
        >
    </TextView>

    <ImageView
        android:id="@+id/imageview_dotOffline"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_dot"
        app:layout_constraintBottom_toTopOf="@+id/textview_priceForEachCategory"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="15dp"
        android:visibility="invisible"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_priceForEachCategory"
        android:text="-25,000"
        app:layout_constraintRight_toLeftOf="@+id/textview_dvt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="15sp"
        android:textColor="@color/blue"
        android:layout_marginEnd="2dp"
        android:fontFamily="@font/sf_pro_text_medium"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_dvt"
        android:text="Ä‘"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="15dp"
        android:textColor="@color/blue"
        android:fontFamily="@font/sf_pro_text_medium"
        />
</androidx.constraintlayout.widget.ConstraintLayout>