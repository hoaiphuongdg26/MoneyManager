<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@drawable/main_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1">
           <TextView
               android:id="@+id/textview_labelAddCategory"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:fontFamily="@font/sf_pro_text_bold"
               android:text="ADD NEW CATEGORY"
               android:textSize="16sp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               android:layout_marginTop="40dp"
               android:textColor="@color/black_blue"
               >
           </TextView>
       </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_Name_addCategory"
                    android:text="Name"
                    android:fontFamily="@font/sf_pro_text_bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:textSize="16sp"
                    android:textColor="@color/black_blue"
                    >
                </TextView>
                <EditText
                    android:id="@+id/edittext_note"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/edittext_income"
                    app:layout_constraintTop_toTopOf="@+id/textview_Name_addCategory"
                    app:layout_constraintBottom_toBottomOf="@id/textview_Name_addCategory"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/textview_Name_addCategory"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="25dp"
                    android:textColor="@color/black_blue"
                    >
                </EditText>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_Icon_addCategory"
                    android:text="Icon"
                    android:fontFamily="@font/sf_pro_text_bold"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/textview_Name_addCategory"
                    app:layout_constraintLeft_toLeftOf="@+id/textview_Name_addCategory"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black_blue"
                    >
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_Color_addCategory"
                    android:text="Color"
                    android:fontFamily="@font/sf_pro_text_bold"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@+id/textview_Name_addCategory"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black_blue"
                    >
                </TextView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5.2"
            android:orientation="horizontal"
            android:weightSum="4">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/button_salary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_salary"
                    android:contentDescription="Button to view salary"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    >
                </ImageButton>
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/button_freelancer"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_freelancer"
                    app:layout_constraintTop_toBottomOf="@+id/button_salary"
                    app:layout_constraintRight_toRightOf="@id/button_salary"
                    app:layout_constraintLeft_toLeftOf="@id/button_salary"
                    android:contentDescription="Button to view freelancer"
                    >
                </ImageButton>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/button_benefit"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_benefit"
                    android:contentDescription="Button to view benefit"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    >
                </ImageButton>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/button_invest"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_invest"
                    android:contentDescription="Button to view invest"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    >
                </ImageButton>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/button_bonus"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_bonus"
                    android:contentDescription="Button to view bonus"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    >
                </ImageButton>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_import"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.454"
                    android:contentDescription="Button to import"
                    >
                </ImageButton>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_weight="1">
            <include layout="@layout/footer"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>