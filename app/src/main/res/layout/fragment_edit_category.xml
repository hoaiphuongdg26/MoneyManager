<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Expense.EditCategoryFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="10dp"
            android:background="#EFF7FE"
            android:weightSum="100">
            <ImageButton
                android:id="@+id/imagebutton_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/icon_left_forward"
                android:onClick="onBackButtonClick"/>
            <TextView
                android:id="@+id/textview_Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="95"
                android:text="EDIT CATEGORY"
                android:gravity="start"
                android:fontFamily="@font/sf_pro_text_medium"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                />
            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_weight="5"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                android:background="@drawable/logo"
                app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/main_background">
            <TextView
                android:id="@+id/textview_labelAddCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_text_medium"
                android:text="ADD NEW CATEGORY"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black_blue"
                android:layout_gravity="center"
                >
            </TextView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_Name_addCategory"
                    android:text="Name"
                    android:fontFamily="@font/sf_pro_text_medium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:textSize="16sp"
                    android:textColor="@color/black_blue"
                    >
                </TextView>
                <EditText
                    android:id="@+id/edittext_nameCategory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_income"
                    app:layout_constraintTop_toTopOf="@+id/textview_Name_addCategory"
                    app:layout_constraintBottom_toBottomOf="@id/textview_Name_addCategory"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/textview_Name_addCategory"
                    app:layout_constraintBaseline_toBaselineOf="@id/textview_Name_addCategory"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/black_blue"
                    >
                </EditText>
                <TextView
                    android:id="@id/textview_Icon_addCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/sf_pro_text_medium"
                    android:text="Icon"
                    android:textColor="@color/black_blue"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/textview_Name_addCategory"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <GridView
                    android:id="@+id/gridview_icon"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:numColumns="5"
                    tools:listitem="@layout/gv_item_icon"
                    android:layout_marginHorizontal="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/textview_Icon_addCategory"
                    app:layout_constraintBottom_toTopOf="@+id/textview_Color_addCategory"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="@drawable/border_selector"
                    />
                <TextView
                    android:id="@+id/textview_Color_addCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/sf_pro_text_medium"
                    android:text="Color"
                    android:textColor="@color/black_blue"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/gridview_icon"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />
                <GridView
                    android:id="@+id/gridview_color"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:numColumns="4"
                    tools:listitem="@layout/gv_item_color"
                    android:layout_marginHorizontal="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/textview_Color_addCategory"
                    app:layout_constraintBottom_toTopOf="@+id/btn_import"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="@drawable/border_selector"
                    />
                <Button
                    android:id="@+id/btn_import"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    style="@style/ButtonStyle"
                    android:text="Import"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="0.5"
                    android:contentDescription="Button to import"
                    >
                </Button>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>