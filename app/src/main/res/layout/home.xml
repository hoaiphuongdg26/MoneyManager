<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:weightSum="105"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:background="@color/purple_200">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="100dp"
                    android:layout_height="32dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/logo"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/menu"
                    />
                <ImageButton
                    android:id="@+id/menu"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/menu_img"
                    android:contentDescription="Menu"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />
                <TextView
                    android:id="@+id/textview_welcome"
                    android:text="HI USER"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/sf_pro_text_bold"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/menu"
                    app:layout_constraintStart_toStartOf="@id/logo"
                    android:textColor="@color/blue"
                    />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:id="@+id/edittext_search"
                    app:layout_constraintStart_toEndOf="@id/textview_welcome"
                    app:layout_constraintTop_toTopOf="@id/textview_welcome"
                    app:layout_constraintBottom_toBottomOf="@id/textview_welcome"
                    android:background="@drawable/search_bar"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:drawableStart="@drawable/kichlup"
                    android:hint=" Search..."
                    android:paddingLeft="10dp"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@id/notification"
                    />
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/notification"
                    android:contentDescription="Menu"
                    android:background="@drawable/notification"
                    app:layout_constraintTop_toTopOf="@id/edittext_search"
                    app:layout_constraintRight_toRightOf="@id/menu"
                    />
                <TextView
                    android:id="@+id/textview_rate"
                    android:text="Income Rate"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/textview_welcome"
                    app:layout_constraintLeft_toLeftOf="@id/textview_welcome"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toBottomOf="@id/textview_rate"
                    android:layout_marginTop="10dp"
                    app:layout_constraintLeft_toLeftOf="@id/textview_rate"
                    app:layout_constraintRight_toRightOf="@id/notification"
                    />
                <TextView
                    android:id="@+id/textview_rateMin"
                    android:text="$0"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_gray"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/progressBar"
                    app:layout_constraintLeft_toLeftOf="@id/progressBar"
                    />
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />

                <TextView
                    android:id="@+id/textview_rateMid"
                    android:text="$10k"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_gray"
                    app:layout_constraintTop_toTopOf="@id/textview_rateMin"
                    app:layout_constraintStart_toStartOf="@id/guideline" />
                <TextView
                    android:id="@+id/textview_rateMax"
                    android:text="$27k"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_gray"
                    app:layout_constraintRight_toRightOf="@id/progressBar"
                    app:layout_constraintTop_toTopOf="@id/textview_rateMin"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:background="@color/teal_700">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!-- Định nghĩa giao diện cho phần 3 tại đây -->
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:background="@color/teal_200">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!-- Định nghĩa giao diện cho phần 4 tại đây -->
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>