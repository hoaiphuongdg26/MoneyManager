<!-- gv_item_color.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <FrameLayout
        android:id="@+id/framelayout_colorCategory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/colorbutton_default"
        >
        <LinearLayout
            android:id="@id/linearlayout_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/border_selector3"
            >
        <ImageButton
            android:id="@+id/imagebutton_iconCategory"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="@drawable/bg_transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_question"
            android:paddingTop="10dp"
            />
        <TextView
            android:id="@+id/textview_nameCategory"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:autoSizeTextType="uniform"
            android:layout_weight="1"
            android:fontFamily="@font/sf_pro_text_medium"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:text="####"
            android:textColor="@color/white"
            android:layout_gravity="center"
            />
        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>