<?xml version="1.0" encoding="utf-8"?>
<!-- border_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button pressed state -->
    <item android:state_pressed="true"
        android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/light_gray2" /> <!-- Set the color when selected -->
            <corners android:radius="10dp" />
            <stroke android:color="@color/light_blue" android:width="2dp" /> <!-- Set border color and width -->
        </shape>
    </item>
    <!-- Default state -->
    <item android:state_pressed="false"
        android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/light_gray2" /> <!-- Set the default color -->
            <corners android:radius="10dp" />
            <stroke android:color="@android:color/transparent" android:width="2dp" /> <!-- Set border color and width -->
        </shape>
    </item>
</selector>
