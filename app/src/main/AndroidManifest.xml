<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Proj_MoneyManager"
        android:usesCleartextTraffic="true"
        android:windowNoTitle="true"
        tools:targetApi="31" >
        <activity
            android:name=".activities.Login"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SignUp"
            android:exported="true" />
        <activity
            android:name=".activities.Profile.Profile"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".activities.HomeFragment"
            android:exported="true" />
        <activity
            android:name=".activities.Statistic.StatisticFragment"
            android:exported="true" />
        <activity
            android:name=".activities.Expense.ExpenseFragment"
            android:exported="true" />
        <activity
            android:name=".activities.Plan.CalendarFragment"
            android:exported="true" />
        <activity
            android:name=".activities.Profile.ProfileFragment"
            android:exported="true" />
        <activity
            android:name=".activities.Setting.SettingFragment"
            android:exported="true" />
        <activity
            android:name=".activities.Expense.EditCategoryFragment"
            android:exported="true"/>
        <receiver android:name=".database.NetworkMonitor"
            android:exported="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
</manifest>